# ========================================
# AI Coding Mentor - Environment Variables
# ========================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# ========================================
# Database Configuration
# ========================================
POSTGRES_DB=agentic_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# PostgreSQL connection string (for backend)
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/agentic_db

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://localhost:6379/0
REDIS_PORT=6379

# ========================================
# Ollama Configuration
# ========================================
# Local Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434

# Model name (must be pulled in Ollama first)
OLLAMA_MODEL=qwen25_coder_7b_local:latest

# Mock mode (set to true to run without Ollama)
MOCK_LLM=false

# ========================================
# Application Configuration
# ========================================
APP_VERSION=1.0.0
BACKEND_PORT=8000

# ========================================
# Development vs Production
# ========================================
# ENVIRONMENT=development
# ENVIRONMENT=production